<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <!-- DBCPInitListener구동 -->
  <!-- 커넥션 풀 생성&연결 리스너 -->
  <listener>
  <listener-class>jdbc.DBCPInitListener</listener-class>
  </listener>
  <context-param>
    <param-name>poolConfig</param-name>
   				<param-value>
                    jdbcdriver=com.mysql.cj.jdbc.Driver
					jdbcUrl=jdbc:mysql://localhost:3306/board?serverTimezone=UTC
					dbUser=team5
					dbPass=1234
					validationQuery=select 1
					minIdle=3
					maxTotal=30
					poolName=team5
   				</param-value>
  </context-param>
  
  <!-- encodingFilter구동 -->
  <filter>
	  	<filter-name>encodingFilter</filter-name>
	  	<filter-class>util.CharacterEncodingFilter</filter-class>
	  	<init-param>
	  		<param-name>encoding</param-name>
	  		<param-value>utf-8</param-value>
	  	</init-param>
  </filter>
  <filter-mapping>
	  	<filter-name>encodingFilter</filter-name>
	  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <!-- ControllerUsingURI구동 -->
  <servlet> <!-- 프로퍼티로 연결해주는 부분 -->
			<servlet-name>ControllerUsingURI</servlet-name>
			<servlet-class>mvc.controller.ControllerUsingURI</servlet-class>
			<init-param>
				<param-name>configFile</param-name>
				<param-value>/WEB-INF/commandHandlerURI.properties</param-value>
			</init-param>
			<load-on-startup>1</load-on-startup>	
  </servlet>
	<!-- 특정 확장자(예를 들어, .do 확장자)를 가진 요청을 ControllerUsingURI 컨트롤러 서블릿이 처리하도록
		web.xml 파일에 적용함 -->
  <servlet-mapping>
			<servlet-name>ControllerUsingURI</servlet-name>
			<url-pattern>*.do</url-pattern>		
  </servlet-mapping>
<filter>
    <filter-name>LoginCheckFilter</filter-name>
    <filter-class>filter.LoginCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginCheckFilter</filter-name>
    <url-pattern>/changePwd.do</url-pattern>
    <url-pattern>/article/write.do</url-pattern>
    <url-pattern>/article/modify.do</url-pattern>
    <url-pattern>/article/delete.do</url-pattern>
  </filter-mapping>


</web-app>
